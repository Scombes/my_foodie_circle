<%= form_tag ('/add') do  %>
		<h2>Quick Add: </h2>
      <%= text_field_tag 'query', nil, placeholder: 'Restaurant, City, State, Zip' %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    

<% end %>


<%= form_for(@restaurant) do |f| %>
<h2>Or Add Restaurant:</h2>
	<%= render 'shared/error_messages', object: f.object %>
	
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :address %>
	<%= f.text_field :address %>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<%= f.label :state %>
	<%= f.text_field :state %>
	<%= f.label :postal %>
	<%= f.text_field :postal %>
	<%= f.label :phone %>
	<%= f.text_field :phone %>
	<%= f.label :category %>
	<%= f.text_field :category %>
	<%= f.submit "Add", class: "btn btn-primary" %>
<% end %>