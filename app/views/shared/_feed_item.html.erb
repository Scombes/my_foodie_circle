<li id="<%= feed_item.id %>">
<div class="row">
	<div class="col-md-2">
		<span class="feed_gravatar"><%= link_to gravatar_for(feed_item.user), feed_item.user %></span>
	</div>
	<div class="col-md-5">
		<span class="user_name"><%= feed_item.user.name %> reccomends:</span>
		<span class="business_name"><%= feed_item.name %></span>
		<span class="category">Type: <%= feed_item.category %></span>
		<span class="business_info"><%= feed_item.address %> <%= feed_item.city %>, <%= feed_item.state %> <%= feed_item.postal %></span>
		<span class="phone"><%= feed_item.phone %></span>
	</div>
	
		<span class="timestamp pull-right"><small>Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</small></span><br />
		<span class="delete pull-right">
			<% if current_user?(feed_item.user) %>
			<%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.name %>
    	</span>
   
	</div>
	
	<span class="notes"><%=feed_item.note %></span>
	<% end %>

</li>