	<%= @restaurant_detail %>

	<%= form_for(@restaurant) do |f| %>

	<h2>Add Note and Edit:</h2>
	<%= render 'shared/error_messages', object: f.object %>
	
		<%= f.label :name %>
		<%= f.text_field :name, :value => @restaurant_detail['result']['name'] %>

	<%= f.label :address %>
	<%= f.text_field :address, :value => @restaurant_detail['result']['address_components'][0]['long_name']+" "+@restaurant_detail['result']['address_components'][1]['long_name'] %>

	<%= f.label :city %>
	<%= f.text_field :city, :value => @restaurant_detail['result']['address_components'][2]['long_name'] %>

	<%= f.label :state %>
	<%= f.text_field :state, :value => @restaurant_detail['result']['address_components'][3]['long_name'] %>

	<%= f.label :postal %>
	<%= f.text_field :postal, :value => @restaurant_detail['result']['address_components'][5]['long_name'] %>

	<%= f.label :phone %>
	<%= f.text_field :phone, :value => @restaurant_detail['result']['formatted_phone_number'] %>

	<%= f.label :category %>
	<%= f.text_field :category%>

	<%= f.label :note %>
	<%= f.text_area :note%>

	<%= f.submit "Add", class: "btn btn-primary" %>
	<% end %> 


