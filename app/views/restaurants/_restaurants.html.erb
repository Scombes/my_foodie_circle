<div class="row">

	<div class="col-md-5">
		<li>
			<span class="business_name"><%= restaurant.name %></span>
			<span class="category">Type: <%= restaurant.category %></span>
			<span class="business_info"><%= restaurant.address %> <%= restaurant.city %>, <%= restaurant.state %> <%= restaurant.postal %></span>
			<span class="phone"><%= restaurant.phone %></span>
	</div>

	<div class="col-md-3">

			<span class="timestamp pull-right"><small>Posted <%= time_ago_in_words(restaurant.created_at) %> ago.</small></span>
			<% if current_user?(restaurant.user) %>
			<span class="pull-right"><%= link_to "delete", restaurant, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: restaurant.name %></span>
    		<% end %>
    </div>
		</li> 

</div>